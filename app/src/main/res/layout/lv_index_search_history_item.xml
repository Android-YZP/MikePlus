<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
     >
     
    <TextView
        android:id="@+id/tv_index_search_listview_history_item_keyword"
        android:layout_width="0dp"
        android:layout_height="@dimen/index_search_listview_history_item_height"
        android:layout_marginLeft="@dimen/index_search_listview_history_item_margin_left"
        android:layout_weight="1"
        android:text="创意"
        android:textColor="@color/index_search_listview_history_item_text_font_color"
        android:textSize="@dimen/index_search_listview_history_item_font_size"
        android:gravity="left|center_vertical" />

    <ImageView
        android:id="@+id/iv_index_search_listview_history_item_cancel"
        android:layout_width="@dimen/index_search_listview_history_item_cancel_width_or_height"
        android:layout_height="@dimen/index_search_listview_history_item_cancel_width_or_height"
        android:layout_marginRight="@dimen/index_search_listview_history_item_cancel_margin_right"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:src="@drawable/index_search_cancel" />
    
</LinearLayout>