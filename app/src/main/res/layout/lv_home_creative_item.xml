<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/index_creative_item_height"
	    android:layout_marginLeft="@dimen/index_creative_item_margin_left_or_right"
	    android:layout_marginRight="@dimen/index_creative_item_margin_left_or_right"
	    android:layout_marginTop="@dimen/index_creative_item_margin_top_or_bottom"
	    android:layout_marginBottom="@dimen/index_creative_item_margin_top_or_bottom"
	    android:orientation="horizontal"
	    android:background="@drawable/bg_border_home_creative_item"
	    >
	    <com.loopj.android.image.SmartImageView 
	        android:id="@+id/iv_home_creative_item_titlepic"
	        android:layout_width="@dimen/index_creative_item_img_width_or_height"
	        android:layout_height="@dimen/index_creative_item_img_width_or_height"
	        android:paddingTop="2px"
	        android:paddingBottom="2px"
	        android:paddingLeft="2px"
	        android:scaleType="fitXY"
	        
	        />
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="@dimen/index_creative_item_content_margin_left"
	        android:layout_marginRight="@dimen/index_creative_item_content_margin_right"
	        android:layout_marginTop="@dimen/index_creative_item_content_margin_top"
	        android:orientation="vertical"
	        >
	        <TextView 
	            android:id="@+id/tv_home_creative_item_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="优时时间管理"
	            android:textSize="@dimen/index_creative_item_title_font_size"
	            android:textColor="@color/index_creative_item_text_font_color"
	            android:singleLine="true"
	            />
	        <TextView 
	            android:id="@+id/tv_home_creative_item_desc"
	            android:layout_width="wrap_content"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:text="有的事总会忘记？优时来帮你"
	            android:textSize="@dimen/index_creative_item_desc_font_size"
	            android:textColor="@color/index_creative_item_text_info_font_color"
	            android:layout_marginTop="@dimen/index_creative_item_desc_margin_top"
	            />
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_marginTop="@dimen/index_creative_item_userlogo_margin_top"
	            android:layout_marginBottom="@dimen/index_creative_item_userlogo_margin_bottom"
	            android:gravity="center_vertical"
	            >
	            <com.mkch.maikejia.view.CustomSmartImageView 
	                android:id="@+id/iv_home_creative_item_userhead"
	                android:layout_width="@dimen/index_creative_item_userlogo_width_or_height"
	                android:layout_height="@dimen/index_creative_item_userlogo_width_or_height"
	                android:src="@drawable/creative_no_img"
	                />
	            <TextView 
	                android:id="@+id/tv_home_creative_item_username"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="lvanLu"
	                android:textColor="@color/index_creative_item_text_font_color"
	                android:textSize="@dimen/index_creative_item_desc_font_size"
	                android:layout_marginLeft="@dimen/index_creative_item_username_margin_left"
	                />
	            
	            <TextView 
	                android:id="@+id/tv_home_creative_item_datetime"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="2015-12-16 21:31"
	                android:textColor="@color/index_creative_item_text_font_color"
	                android:textSize="@dimen/index_creative_item_desc_font_size"
	                />
	        </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
