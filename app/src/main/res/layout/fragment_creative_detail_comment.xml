<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/creativedetail_common_bg_color" >
    <com.mkch.maikejia.view.CustomListViewWithHeight
        android:id="@+id/lv_creative_detail_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/creativedetail_common_line_color"
        android:dividerHeight="1px"
        ></com.mkch.maikejia.view.CustomListViewWithHeight>
    <TextView 
        android:id="@+id/tv_creative_detail_comment_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无评论"
        android:textSize="@dimen/creativedetail_comment_item_common_content_font_size"
        android:textColor="@color/creativedetail_comment_content_font_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
</LinearLayout>
