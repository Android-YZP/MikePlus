<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_color"
     >
    <include 
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height"
        layout="@layout/layout_common_topbar"
        />
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView 
            android:id="@+id/iv_creative_detail_no_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/creativedetail_banner_height"
            android:background="@drawable/creative_no_img"
            android:visibility="gone"
            />

		<com.loopj.android.image.SmartImageView
			android:id="@+id/iv_creative_detail_ad_pic"
			android:layout_width="match_parent"
			android:layout_height="@dimen/creativedetail_banner_height"
			/>
		<!---->
		<!--<com.mkch.maikejia.view.AdScrollLayout-->
		        <!--android:id="@+id/ad_creative_detail"-->
		        <!--android:layout_width="match_parent"-->
		        <!--android:layout_height="@dimen/creativedetail_banner_height"-->
		        <!--&gt;</com.mkch.maikejia.view.AdScrollLayout>-->
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:background="@color/creativedetail_common_bg_color"
		    >
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:background="@drawable/bg_border_creativedetail_titlebar"
			    >
			    <TextView 
			        android:id="@+id/tv_creativedetail_titlebar_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="标题"
			        android:textColor="@color/creativedetail_title_text_font_color"
			        android:textSize="@dimen/creativedetail_titlebar_title_text_font_size"
			        android:layout_marginLeft="@dimen/creativedetail_titlebar_title_or_desc_margin_left"
			        android:layout_marginTop="@dimen/creativedetail_titlebar_title_margin_top"
			        />
			    
			    <TextView 
			        android:id="@+id/tv_creativedetail_titlebar_desc"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="简介"
			        android:lineSpacingMultiplier="1.2"
			        android:textColor="@color/creativedetail_desc_text_font_color"
			        android:textSize="@dimen/creativedetail_titlebar_desc_text_font_size"
			        android:layout_marginLeft="@dimen/creativedetail_titlebar_title_or_desc_margin_left"
			        android:layout_marginRight="@dimen/creativedetail_titlebar_title_or_desc_margin_left"
			        android:layout_marginTop="@dimen/creativedetail_titlebar_desc_margin_top"
			        android:layout_marginBottom="@dimen/creativedetail_titlebar_desc_margin_top"
			        />
			</LinearLayout>
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/creativedetail_titlebar_part_second_height"
			    android:orientation="horizontal"
			    android:gravity="center_vertical"
			    >
			    <TextView 
			        android:id="@+id/tv_creativedetail_titlebar_sencond_datetime"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="发布于："
			        android:textColor="@color/creativedetail_desc_text_font_color"
			        android:textSize="@dimen/creativedetail_titlebar_part_second_text_font_size"
			        android:paddingLeft="@dimen/creativedetail_titlebar_part_second_text_padding_left_or_right"
			        android:paddingRight="@dimen/creativedetail_titlebar_part_second_text_padding_left_or_right"
			        />
			    <View 
			        android:layout_width="@dimen/creativedetail_titlebar_border_size"
			        android:layout_height="match_parent"
			        android:background="@color/creativedetail_common_line_color"
			        />
			    <TextView 
			        android:id="@+id/tv_creativedetail_titlebar_sencond_cate"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="分类："
			        android:textColor="@color/creativedetail_desc_text_font_color"
			        android:textSize="@dimen/creativedetail_titlebar_part_second_text_font_size"
			        android:paddingLeft="@dimen/creativedetail_titlebar_part_second_text_padding_left_or_right"
			        android:paddingRight="@dimen/creativedetail_titlebar_part_second_text_padding_left_or_right"
			        />
			    <View 
			        android:layout_width="@dimen/creativedetail_titlebar_border_size"
			        android:layout_height="match_parent"
			        android:background="@color/creativedetail_common_line_color"
			        />
			    <TextView 
			        android:id="@+id/tv_creativedetail_titlebar_sencond_visitnum"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="浏览量：0"
			        android:textColor="@color/creativedetail_desc_text_font_color"
			        android:textSize="@dimen/creativedetail_titlebar_part_second_text_font_size"
			        android:paddingLeft="@dimen/creativedetail_titlebar_part_second_text_padding_left_or_right"
			        android:paddingRight="@dimen/creativedetail_titlebar_part_second_text_padding_left_or_right"
			        />
			    <View 
			        android:layout_width="@dimen/creativedetail_titlebar_border_size"
			        android:layout_height="match_parent"
			        android:background="@color/creativedetail_common_line_color"
			        />
			    <TextView 
			        android:id="@+id/tv_creativedetail_titlebar_sencond_status"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="状态："
			        android:textColor="@color/creativedetail_desc_text_font_color"
			        android:textSize="@dimen/creativedetail_titlebar_part_second_text_font_size"
			        android:paddingLeft="@dimen/creativedetail_titlebar_part_second_text_padding_left_or_right"
			        android:paddingRight="@dimen/creativedetail_titlebar_part_second_text_padding_left_or_right"
			        />
			</LinearLayout>
				<View 
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/creativedetail_titlebar_border_size"
			        android:background="@color/creativedetail_common_line_color"
			        />
		</LinearLayout>
		
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/creativedetail_userbar_height"
		    android:orientation="horizontal"
		    android:background="@drawable/bg_border_creativedetail_titlebar"
		    android:gravity="center_vertical"
		    android:layout_marginTop="@dimen/creativedetail_userbar_margin_top"
		    >
		    <com.mkch.maikejia.view.CustomSmartImageView  
		        android:id="@+id/iv_creativedetail_userbar_headpic"
		        android:layout_width="@dimen/creativedetail_userbar_headpic_width_or_height"
		        android:layout_height="@dimen/creativedetail_userbar_headpic_width_or_height"
		        android:layout_marginLeft="@dimen/creativedetail_userbar_headpic_margin_left"
		        android:layout_marginRight="@dimen/creativedetail_userbar_headpic_margin_left"
		        android:src="@drawable/creative_no_img"
		        />
		    <TextView 
		        android:id="@+id/tv_creativedetail_userbar_username"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:text="昵称"
		        android:textColor="@color/creativedetail_title_text_font_color"
		        android:textSize="@dimen/creativedetail_titlebar_title_text_font_size"
		        />
		    
		    <TextView 
		        android:id="@+id/tv_creativedetail_userbar_attention_user"
		        android:layout_width="@dimen/creativedetail_userbar_text_bg_width"
		        android:layout_height="@dimen/creativedetail_userbar_text_bg_height"
		        android:text="关注TA"
		        android:textColor="@color/creativedetail_title_text_font_color"
		        android:textSize="@dimen/creativedetail_titlebar_title_text_font_size"
		        android:layout_marginRight="@dimen/creativedetail_userbar_text_margin_right"
		        android:gravity="center"
		        android:background="@drawable/bg_border_btn_attention"
		        />
		    
		</LinearLayout>
		
		<com.mkch.maikejia.view.CreativeDetailTabBarLayout
		    android:id="@+id/view_creative_detail_tabbar"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/creativedetail_detail_tabbar_height"
		    android:layout_marginTop="@dimen/creativedetail_userbar_margin_top"
		    >
		</com.mkch.maikejia.view.CreativeDetailTabBarLayout>
		
		<com.mkch.maikejia.view.CustomViewPager
	        android:id="@+id/viewpager_creative_detail_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        >
    	</com.mkch.maikejia.view.CustomViewPager>
	</LinearLayout>
	</ScrollView>
    <include 
        android:id="@+id/include_creative_detail_bottom_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/creativedetail_bottombar_height"
        layout="@layout/layout_creative_detail_bottom_action"
        
        />
    <include 
        android:id="@+id/include_creative_detail_bottom_comment_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_creative_detail_bottom_comment_commit"
        android:visibility="gone"
        />
</LinearLayout>
