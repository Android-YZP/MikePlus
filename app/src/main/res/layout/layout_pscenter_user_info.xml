<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pscenter_psinfo_baseinfo_height"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.mkch.maikejia.view.CustomSmartImageView
        android:id="@+id/csiv_pscenter_user_info_headpic"
        android:layout_width="@dimen/pscenter_psinfo_headpic_width_or_height"
        android:layout_height="@dimen/pscenter_psinfo_headpic_width_or_height"
        android:layout_marginLeft="@dimen/pscenter_psinfo_headpic_margin_left_or_right"
        android:layout_marginRight="@dimen/pscenter_psinfo_headpic_margin_left_or_right"
        android:src="@drawable/pscenter_headpic_nohead" />

    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        
        <TextView
            android:id="@+id/tv_pscenter_user_info_username"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="用户名"
	        android:textColor="@color/pscenter_psinfo_username_text_font_color"
	        android:textSize="@dimen/pscenter_psinfo_username_text_font_size"
	        android:textStyle="bold"
	         />
        <TextView
            android:id="@+id/tv_pscenter_user_info_sign"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/pscenter_psinfo_sign_margin_top"
	        android:text="签名:"
	        android:textColor="@color/pscenter_psinfo_sign_text_font_color"
	        android:textSize="@dimen/pscenter_psinfo_sign_text_font_size" />
    </LinearLayout>
    
	<ImageView 
            android:layout_width="@dimen/find_list_item_right_array_width"
            android:layout_height="@dimen/find_list_item_right_array_height"
            android:layout_marginRight="@dimen/find_list_item_right_arraw_margin_right"
            android:src="@drawable/find_right_array"
            />
</LinearLayout>