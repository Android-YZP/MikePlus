    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/find_list_margin_top"
        >
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/find_list_border_size"
            android:background="@color/find_list_border_color"
            />
        
        <com.mkch.maikejia.view.UserSettingInfoListItem
            android:id="@+id/customview_user_setting_list_item_aboutus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></com.mkch.maikejia.view.UserSettingInfoListItem>
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/find_list_border_size"
            android:background="@color/find_list_border_color"
            />
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/find_list_margin_top"
