<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_color"
     >
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/common_topbar_height"
	    android:background="@color/common_topbar_bg_color" >
	
	    <ImageView
	        android:id="@+id/iv_user_creative_list_topbar_back"
	        android:layout_width="@dimen/creativedetail_topbar_img_back_width"
	        android:layout_height="@dimen/creativedetail_topbar_img_back_height"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/nav_back" />
	
	    <TextView
	        android:id="@+id/tv_user_creative_list_topbar_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="标题"
	        android:textColor="@color/common_topbar_text_font_color"
	        android:textSize="@dimen/common_topbar_text_font_size"
	        android:textStyle="bold" />
	
	    <ImageView
	        android:id="@+id/iv_user_creative_list_topbar_deploy"
	        android:layout_width="@dimen/creativedetail_topbar_img_back_width"
	        android:layout_height="@dimen/creativedetail_topbar_img_back_height"
	        android:padding="@dimen/pscenter_user_creative_list_topbar_deploy_padding"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:src="@drawable/user_creative_list_deploy"
	        android:visibility="gone"
	         />
	</RelativeLayout>
    
    <fragment 
        android:id="@+id/fragment_user_creative_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.mkch.maikejia.fragment.UserCreativeListFragment"
        
        />
</LinearLayout>
