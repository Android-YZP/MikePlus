		        android:layout_centerVertical="true"
		        android:layout_alignParentLeft="true"
		        android:background="@drawable/nav_back" />
		
		    <TextView
		        android:id="@+id/tv_user_setting_info_topbar_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:text="标题"
		        android:textColor="@color/common_topbar_text_font_color"
		        android:textSize="@dimen/common_topbar_text_font_size"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/tv_user_setting_info_topbar_completed"
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/common_topbar_height"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_alignParentRight="true"
		        android:gravity="center"
		        android:text="修改"
		        android:textColor="@color/common_topbar_text_font_color"
		        android:textSize="@dimen/common_topbar_text_font_size"
		         />
		
		</RelativeLayout>
        
	    <View 
