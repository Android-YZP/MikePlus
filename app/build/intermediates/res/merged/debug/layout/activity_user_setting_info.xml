            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/find_list_item_height"
            android:background="@color/find_list_bg_color"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/find_list_item_height"
                android:layout_marginLeft="@dimen/find_list_line_or_img_margin_left"
                android:gravity="center_vertical"
                android:text="头像"
                android:textColor="@color/common_content_dark_gray_text_font_color"
                android:textSize="14sp"
                />
            
            <com.mkch.maikejia.view.CustomSmartImageView  
                android:id="@+id/iv_user_setting_info_headpic"
                android:layout_width="@dimen/find_list_item_img_width_or_height"
                android:layout_height="@dimen/find_list_item_img_width_or_height"
                android:layout_marginRight="@dimen/find_list_item_right_arraw_margin_right"
                android:src="@drawable/pscenter_user_setting_gerenziliao"
				></com.mkch.maikejia.view.CustomSmartImageView>
        </LinearLayout>
