<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/find_creative_tabbar_height"
    android:orientation="vertical"
    android:background="@color/main_tabbar_bg_color"
    >
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/find_creative_tabbar_height_item"
	    android:paddingTop="2dp"
	    android:orientation="horizontal"
	    android:gravity="center_vertical" >
	    <TextView 
	        android:id="@+id/mkf_item0"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:text="最新文章"
	        android:textColor="@color/index_creative_item_text_font_color"
	        android:textSize="@dimen/common_content_text_font_size"
	        />
		<TextView 
	        android:id="@+id/mkf_item1"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:text="麦客说"
	        android:textColor="@color/index_creative_item_text_font_color"
	        android:textSize="@dimen/common_content_text_font_size"
	        />
		<TextView 
	        android:id="@+id/mkf_item2"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:text="创意吧"
	        android:textColor="@color/index_creative_item_text_font_color"
	        android:textSize="@dimen/common_content_text_font_size"
	        />
		
	    
	</LinearLayout>
    <View
        android:id="@+id/tab_under_line"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/common_content_dark_text_font_color" >
    </View>
</LinearLayout>
