<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_color"
     >
    <include 
        android:id="@+id/include_creative_list_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height"
        layout="@layout/layout_common_topbar"
        />
    
    <com.mkch.maikejia.view.CreativeListTabBarLayout 
        android:id="@+id/view_creative_list_tabbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/find_creative_tabbar_height"
     ></com.mkch.maikejia.view.CreativeListTabBarLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_creative_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v4.view.ViewPager>
</LinearLayout>
