<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_color"
     >
    <include 
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height"
        layout="@layout/layout_common_topbar"
        />
    
    <com.mkch.maikejia.view.UserAttentionTabBarLayout
        android:id="@+id/custom_user_attention_tabbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/find_creative_tabbar_height"
        ></com.mkch.maikejia.view.UserAttentionTabBarLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_user_attention"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v4.view.ViewPager>
</LinearLayout>
